<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Watch List !</h1>
    <p>Help you to find good movies</p>
  </div>
</div>

<div class="container m-5">
  <div class="row">
    <div class="d-flex justify-content-between">
      <div>
        <h3>My lists</h3>
      </div>
      <div>
        <%= link_to 'create a movie list', new_list_path, class:'btn btn-success' %>
      </div>
    </div>
    <% @lists.each do |list| %>
      <div class="card list-card mx-3 my-3">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
